/* components/common/search-bar/search-bar.wxss */
.search-bar{
    box-sizing: border-box;
    width: 100%;
    display: flex;
    padding: 20rpx 30rpx;
    background: #fff;
}
.search-bar .bar{
    display: flex;
    flex: 1 1 auto;
    height: 60rpx;
    background: #eee;
    border-radius: 20rpx;
}
.search-bar .bar .input{
    flex: 1 1 auto;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    font-size: 26rpx;
    padding-left: 2em;
    padding-right: 20rpx;
}

.search-bar .btn{
    flex: 0 0 100rpx;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #0f0;
}