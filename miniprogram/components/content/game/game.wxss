/* components/content/game/game.wxss */
.game{
    position: relative;
    background: #96C1E6;
    width: 540rpx;
    height: 960rpx;
}
.game .btn{
    position: absolute;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    left: 50%;
    transform: translateX(-50%);
    bottom: 50rpx;
    background: #00B26A;
    opacity: 0.7;
}