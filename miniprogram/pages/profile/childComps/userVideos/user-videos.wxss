/* pages/profile/childComps/userVieos/user-videos.wxss */
.user-videos{
    --color-text:#424242;
    --color-bg:#96C1E6;
    background: #fff;
    color: var(--color-text);
}
.tab-control{
    position: relative;
    display: flex;
    position: sticky;
    background: #fff;
    top: 0;
    box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, .2);
    /* margin-bottom: 5rpx; */
}
.tab-control view{
    box-sizing: border-box;
    width: 33.333%;
    height: 90rpx;
    border-top: 1px solid #d5d5d5;
    line-height: 80rpx;
    font-weight: 500;
    font-size: 30rpx;
    text-align: center;
}
.tab-control .bar{
    border: none;
    position: absolute;
    width: 33.333%;
    height: 15rpx;
    border-radius: 10rpx;
    background: var(--color-bg);
    bottom: 0;
    transition: all .3s;
}

.videos{
    display: flex;
    flex-wrap: wrap;
}
.videos .video{
    position: relative;
    overflow: hidden;
    width: 250rpx;
    height: 350rpx;
    background: var(--color-bg);
    box-sizing: border-box;
    border-bottom: 1px solid #aaa;
    border-right: 1px solid #aaa;
}
.videos .video:nth-child(3n){
    border-right: none;
}

.videos .video .title{
    position: absolute;
    top: 310rpx;
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    text-indent: 30rpx;
    left: 0;
    z-index: 2;
    color: #fff;
    font-size: 28rpx;
    background: rgba(0, 0, 0, .3);
}