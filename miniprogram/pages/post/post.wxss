/* pages/post/post.wxss */

page{
    --color-bg:#96C1E6;
    --color-text:#01DC63;
    --color-style:#01DC63;
    background: #fff;
}
.page{
    position: absolute;
    top: 0;
    bottom: 100rpx;
    left: 0;
    right: 0;
    padding: 0 30rpx;
    color: #424242;
}
.page image{
    display: block;
    width: 50rpx;
    height: 50rpx;
    margin-right: 30rpx;
}
.top{
    display: flex;
    border-bottom: 1px solid #d5d5d5;
}

.top .img-post{
    flex: 0 0 300rpx;
    width: 270rpx;
    min-width: 270rpx;
    max-width: 270rpx;
    height: 270rpx;
    min-height: 270rpx;
    max-height: 480rpx;
    background: #eee;
    margin: 0;
}
.top .img-post image{
    width: 100%;
    height: auto;
}
.top .content{
    width: 420rpx;
    padding: 20rpx 0;
}
/* 标题 */
.top .content .title{
    display: flex;
    border-bottom: 1px solid #d5d5d5;
    font-weight: 600;
    padding: 30rpx 0;
}
/* 描述 */
.top .content .des{
    display: flex;
    text-indent: 80rpx;
    padding: 30rpx 0;
}
.top .content .des image{
    position: absolute;
}
/*  */
.type{
    border-bottom: 1px solid #d5d5d5;
}
.type .wraper{
    display: flex;
    padding: 30rpx 0;
    height: 50rpx;
    line-height: 50rpx;
}
.type .wraper icon,
.type .wraper text{
    display: block;
}

.bottom{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    padding-bottom: 30rpx;
    display: flex;
    justify-content: center;
}
.btn{
    box-sizing: border-box;
    background: var(--color-bg);
    border-radius: 50%;
    text-align: center;
    width: 120rpx;
    height: 120rpx;
    line-height: 120rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 600;
    margin: 0 20rpx;
}
.btn-post{
    background: #00B26A;
}